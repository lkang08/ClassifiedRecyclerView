<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="young.tze.classifiedrecyclerview">

    <young.tze.appstat.ClassifiedRecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/edittext_height"
        android:paddingLeft="@dimen/item_margin"
        android:visibility="gone" />

    <EditText
        android:id="@+id/edittext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edittext_height"
        android:layout_gravity="bottom"
        android:background="@color/itemGapColor"
        android:paddingLeft="@dimen/item_margin"
        android:visibility="visible" />

    <young.tze.appstat.IndexBar
        android:id="@+id/index_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/progress_bar_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="@dimen/item_drawable_size"
            android:layout_height="@dimen/item_drawable_size"
            android:layout_centerInParent="true" />
    </RelativeLayout>

</FrameLayout>
